<Panel visible     = "false"
       name        = "Main Frame">
  
  <Font path = "/NSGUI/ArialSmall.tga" />
  
  <Panel name        = "User Controls"
         layout      = "YAXIS"
         anchorPoint = "CORNERRU"> 
         
    <Position    x = "-10" y = "10"/>
    <Interval    y = "2" x = "2" />

    <TabbedPanel callbackString = "tp">
      <TabButtonsBordersColor  x = "50" g = "50" b = "50" />
      <TabButtonsColor         x = "255" g = "180" b = "40" />
      <BordersColor            x = "216" y = "169" z =  "0" />
      <BGColor                 x =  "50" y =  "50" z = "50" />

      <Panel name           = "Render"
             layout         = "YAXIS"> 

         <RadioButton callbackString = "raptor"
                   checked        = "false">
           <Text string = "Render Raptor" />
         </RadioButton>  

         <RadioButton callbackString = "hero"
                   checked        = "false">
           <Text string = "Render Hero" />
         </RadioButton>  

         <RadioButton callbackString = "hero-mesh"
                   checked        = "false">
           <Text string = "Render Hero 2" />
         </RadioButton>
         
         <RadioButton callbackString = "spineboy"
                   checked        = "false">
           <Text string = "Render Spineboy" />
         </RadioButton>

         <RadioButton callbackString = "speedy"
                   checked        = "false">
           <Text string = "Render Speedy" />
         </RadioButton> 

         <RadioButton callbackString = "alien"
                   checked        = "false">
           <Text string = "Render Alien" />
         </RadioButton>
         
         <RadioButton callbackString = "goblins"
                   checked        = "false">
           <Text string = "Render Goblins" />
         </RadioButton>
         
         <RadioButton callbackString = "goblins-ffd"
                   checked        = "false">
           <Text string = "Render Goblins 2" />
         </RadioButton>

         <RadioButton callbackString = "dragon"
                   checked        = "true">
           <Text string = "Render Dragon" />
         </RadioButton>

         <RadioButton callbackString = "spineboy-old"
                   checked        = "false">
           <Text string = "Render Spineboy-old" />
         </RadioButton>
      </Panel>
  
    </TabbedPanel>
  </Panel>
</Panel>

